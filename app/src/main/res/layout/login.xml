<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Login">


    <TextView
        android:id="@+id/book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:text="     BookStack"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/book"
        android:layout_marginTop="60dp"
        android:background="@drawable/ev_bg"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:maxLines="1"
        android:padding="15dp"
        android:textSize="@dimen/textSize15" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:layout_marginTop="@dimen/dip10"
        android:background="@drawable/ev_bg"
        android:hint="@string/hitpass"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLines="1"
        android:padding="15dp"

        android:textSize="@dimen/textSize15" />

    <TextView
        android:id="@+id/tvRegBtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etPassword"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:padding="@dimen/dip20"
        android:text="LOG IN"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSize20"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvRegBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvRegBtn1"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:padding="@dimen/dip20"
        android:text="Don't have an account ?\nSIGN UP now!"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold" />


</RelativeLayout>
